<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_register"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:src="@drawable/icon_back" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="注册账号"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="请输入手机号"
            android:inputType="number"
            android:textSize="16sp"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:background="@drawable/login_register_edit_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>


        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="密码"
            android:textSize="16sp"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:background="@drawable/login_register_psw_edit_bg"
            android:password="true"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>

        <EditText
            android:id="@+id/et_config_password"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="确认密码"
            android:textSize="16sp"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:background="@drawable/login_register_psw_edit_bg"
            android:paddingLeft="10dp"
            android:password="true"
            android:paddingRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textSize="16sp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:background="@drawable/login_register_psw_edit_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <com.xihua.wx.weixiao.utils.CheckCode
                android:id="@+id/bt_code"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/login_register_psw_edit_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="验证码" />
        </LinearLayout>
        <RelativeLayout
            android:background="@drawable/login_register_psw_edit_bg"
            android:id="@+id/rl_renzheng"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="1dp">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@drawable/small_right" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="40dp"
                android:textColor="@color/white"
                android:text="立即认证"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="10dp"
                android:text="校园认证"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <CheckBox
                android:layout_marginLeft="50dp"
                android:id="@+id/check"
                android:layout_height="35dp"
                android:layout_width="30dp"
                android:textSize="14sp"
                android:paddingRight="10dp"/>
            <TextView
                android:id="@+id/xieyi"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:paddingRight="10dp"
                android:textSize="14sp"
                android:textColor="@color/color_green"
                android:text="注册条款《WE注册服务协议》" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_register"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_login_button_selector"
            android:text="注册"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="50dp"/>

    </LinearLayout>

</LinearLayout>