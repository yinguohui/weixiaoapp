<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_login"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_register_bg">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="13dp"
            android:src="@drawable/icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="忘记密码"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingTop="50dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp">

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="电话号码"
            android:inputType="number"
            android:textSize="16sp"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:background="@drawable/login_register_edit_bg"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
        <EditText
            android:id="@+id/et_newpassword"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:textSize="16sp"
            android:textColor="@color/login_text_color"
            android:textColorHint="@color/login_text_color"
            android:background="@drawable/login_register_edit_bg"
            android:paddingLeft="10dp"
            android:password="true"
            android:paddingRight="10dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_code"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="45dp"
                android:gravity="center_vertical"
                android:hint="验证码"
                android:textSize="16sp"
                android:textColor="@color/login_text_color"
                android:textColorHint="@color/login_text_color"
                android:background="@drawable/login_register_psw_edit_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>
            <com.xihua.wx.weixiao.utils.CheckCode
                android:id="@+id/bt_code"
                android:layout_width="120dp"
                android:layout_height="45dp"
                android:background="@drawable/login_register_psw_edit_bg"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="验证码" />
        </LinearLayout>

        <Button
            android:id="@+id/bt_forget"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/item_login_button_selector"
            android:text="确定"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginTop="15dp"/>
    </LinearLayout>
</LinearLayout>