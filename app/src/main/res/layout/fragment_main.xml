<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/rl_banner"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:src="@drawable/icon_test_title"
            android:scaleType="centerCrop"
            android:layout_height="168dp" />
        <TextView
            android:id="@+id/wx_functions_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:text="校园功能"
            android:textColor="@color/colorBig"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_sell"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/wx_functions_sell_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_sell"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/wx_functions_sell_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/colorMid"
                    android:textSize="16sp"
                    android:text="买卖市场"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_publish"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/wx_functions_publish_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_changyan"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/wx_functions_publish_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/colorMid"
                    android:textSize="16sp"
                    android:text="自由畅言"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_donation"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/wx_functions_donation_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_donation"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/wx_functions_donation_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/colorMid"
                    android:textSize="16sp"
                    android:text="爱心捐赠"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_below="@+id/ll_functions1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_lost"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/wx_functions_lost_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/icon_lost"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/wx_functions_lost_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/colorMid"
                    android:textSize="16sp"
                    android:text="失物招领"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">

                <ImageView
                    android:id="@+id/wx_functions_info_icon"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_info"
                    android:scaleType="centerCrop"/>

                <TextView
                    android:id="@+id/wx_functions_info_text"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_alignParentBottom="true"
                    android:layout_gravity="center"
                    android:textColor="@color/colorMid"
                    android:textSize="16sp"
                    android:text="信息反馈"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_marginRight="10dp">
            </LinearLayout>
        </LinearLayout>


        <!--竖向广告-->
        <ViewFlipper
            android:id="@+id/vf_view"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:autoStart="true"
            android:flipInterval="5000"
            android:inAnimation="@anim/anim_in"
            android:outAnimation="@anim/anim_out" />

</LinearLayout>