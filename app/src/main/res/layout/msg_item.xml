<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circle="http://schemas.android.com/apk/res/com.xihua.wx.weixiao"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:id="@+id/rl_receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">
        <com.xihua.wx.weixiao.utils.image.CircleNetworkImageImage
            android:id="@+id/iv_avator_recieve"
            android:layout_width="30dp"
            android:layout_height="30dp"
            circle:civ_border_width="1dp"
            circle:civ_border_color="@android:color/transparent"
            circle:civ_border_overlay="true"
            circle:civ_fill_color="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />

        <TextView
            android:id="@+id/tv_nickname_recieve"
            android:text="范冰冰"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_avator_recieve"
            android:layout_marginTop="5dp"/>

        <TextView
            android:id="@+id/tv_msg_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/left_messages"
            android:text="你发的"
            android:layout_toRightOf="@id/iv_avator_recieve"
            android:layout_below="@id/tv_nickname_recieve"
            android:layout_marginTop="5dp"
            android:gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="right">

            <TextView
                android:id="@+id/tv_msg_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/right_messages"
                android:text="我发的"
                android:layout_marginTop="5dp"
                android:gravity="center"/>
        </LinearLayout>
        <com.xihua.wx.weixiao.utils.image.CircleNetworkImageImage
            android:id="@+id/iv_avator_send"
            android:layout_width="30dp"
            android:layout_height="30dp"
            circle:civ_border_width="1dp"
            circle:civ_border_color="@android:color/transparent"
            circle:civ_border_overlay="true"
            circle:civ_fill_color="@android:color/transparent"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp" />
    </LinearLayout>

</LinearLayout>